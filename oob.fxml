<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<GridPane prefHeight="100" prefWidth="200" hgap="10" vgap="10" id="GridPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oob.OobController" >
    <children>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Try oobing!">
            <padding>
                <Insets top="0" right="5" left="5" />
            </padding>
        </Label>
        <TextField GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="oobTf">
            <padding>
                <Insets top="5" right="5" left="5" bottom="5" />
            </padding>
            <GridPane.margin>
                <Insets left="5"/>
            </GridPane.margin>

        </TextField>
        <Button GridPane.columnIndex="1" GridPane.rowIndex="1" text="oob" onAction="#handleButtonAction" fx:id="oobButton">
            
        </Button>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="oob" fx:id="oobLbl">
            <padding>
                <Insets top="0" right="5" left="5" />
            </padding>
        </Label>
            <Button GridPane.columnIndex="0" GridPane.rowIndex="3" text="copy oob to clipboard" onAction="#handleCopyAction" fx:id="copyButton">
            <GridPane.margin>
                <Insets left="5" bottom="5"/>
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
